{
  "start": "npm run frontend:dev",
  "start:both": "concurrently \"npm:frontend:dev\" \"npm:backend:dev\"",

  "frontend:dev": "webpack serve --progress --color --port 8081 --hot --inline --config webpack.config.js --content-base .",
  "frontend:dev-prod": "webpack serve --progress --color --port 8081 --hot --inline --config prod.webpack.config.js --content-base .",
  "frontend:build": "npm run clean && mkdirp ./dist && webpack build --progress --color --config prod-webpack.config.js",
  "compile": "npm run frontend:build",

  "backend:build": "mvn clean install -Pprinting",
  "backend:dev": "npm run backend:build && mvn cargo:run -f ./web/pom.xml",

  "pretest": "npm run lint",
  "test": "karma start ./karma.conf.single-run.js --color",
  "test:watch": "karma start ./karma.conf.continuous-test.js --color",
  "continuoustest": "npm run test:watch",

  "postinstall": "node MapStore2/utility/build/postInstall.js",
  "clean": "rimraf dist",
  "lint": "eslint js --ext .jsx,.js",
  "updateDevDeps": "node updateDevDependencies.js"
}
